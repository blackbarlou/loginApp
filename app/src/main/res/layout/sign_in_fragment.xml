<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOUVELLE CONNEXION"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- username -->
    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nom d'utilisateur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/username_image"
        app:layout_constraintTop_toBottomOf="@id/intro"
        app:layout_constraintBottom_toTopOf="@id/password"
        android:layout_marginEnd="10dp"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <ImageView
        android:id="@+id/username_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/username"
        />

    <!-- password -->
    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintBottom_toTopOf="@id/password2"
        app:layout_constraintEnd_toStartOf="@id/password_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        />
    <ImageView
        android:id="@+id/password_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_password_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/password"
        />


    <!-- confirm password -->
    <EditText
        android:id="@+id/password2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Confirmer mot de passe"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintBottom_toTopOf="@id/confirm_button"
        app:layout_constraintEnd_toStartOf="@id/password2_logo"
        android:layout_marginEnd="10dp"
        />

    <ImageView
        android:id="@+id/password2_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_password_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/password2"
        />

    <!-- texte annuler -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:text="Annuler "
        app:layout_constraintTop_toBottomOf="@id/password2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/confirm_button"
        android:layout_marginTop="40dp"
        />

    <!-- boutton de confirmation -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirmer"
        app:layout_constraintTop_toBottomOf="@id/password2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

    </layout>
